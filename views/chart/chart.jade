extends ../base-page
block append head
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js")
    script(src="http://code.highcharts.com/highcharts.js")
    script(src="http://code.highcharts.com/modules/exporting.js")

block content
    div.span24
        div.show-grid.row-fluid
            h3 展示您的数据
            div.span4
            div.span16
                div.form-horizontal
                    fieldset
                        legend 填写一些简单的数据吧先
                        div.control-group
                            label.control-label 填写数据的jsonp地址
                            div.controls
                                input.input-xlarge
                        div.control-group
                            label.control-label 选择图标类型
                            div.controls
                                select(name="type")
                                    option(value="bar") bar
                                    option(value="bar") bar
                                    option(value="bar") bar
                        div.form-actions
                            div.ks-button.ks-button-primary 展示数据
            div.span4
    div.span24
        div.show-grid.row-fluid
            h4 图标
            div.span4
                &nbsp;
            div.span16
                div#container(style="width:100%;height:100%;")
            div.span4
                &nbsp;

block fscripts
